section.intro
	.container
		.intro__inner
			h1.intro__title Find your Perfect Home 
				a.intro__title_link(href="#steps") with&nbsp;Us
			p.intro__subtitle All ready set for you, just relax, and tell&nbsp;us how your dreamy house, and we&nbsp;will find for you.
			.intro__video
				a.intro__btn.btn(href="#" target="_blank") Learn More
				a.intro__play(href="#")
					svg.intro__play_icon(width="42" height="42" viewBox="0 0 42 42" fill="none" xmlns="http://www.w3.org/2000/svg")
						path(fill-rule="evenodd" clip-rule="evenodd" d="M21 42C32.598 42 42 32.598 42 21C42 9.40202 32.598 0 21 0C9.40202 0 0 9.40202 0 21C0 32.598 9.40202 42 21 42ZM29.5909 23.1306C30.8636 22.3958 30.8636 20.5588 29.5909 19.824L18.8523 13.624C17.5795 12.8892 15.9886 13.8077 15.9886 15.2773V27.6772C15.9886 29.1468 17.5795 30.0654 18.8523 29.3305L29.5909 23.1306Z")
					span Watch video
			form.search(action='https://my-json-server.typicode.com/typicode/demo/posts' method="POST" enctype="multipart/form-data")
				.search__item
					p.search__name Location
					select.search__variable(tabindex="10" name="Location" required="required")
						option(value="New York" selected) New York
						option(value="New York") New York
						option(value="New York") New York
				.search__item
					p.search__name Type
					select.search__variable(tabindex="10" name="Type" required="required")
						option(value="All types" selected) All types
						option(value="Type 1") Type 1
						option(value="Type 2") Type 2
				.search__item
					p.search__name Max budget
					select.search__variable(tabindex="10" name="Budget" required="required")
						option(value=" 12.000" selected) 12.000 &#36;
						option(value=" 12.000") 10.000 &#36;
						option(value=" 12.000") 9.000 &#36;
				button.search__btn.btn(type="submit") Search
	img.intro__img(src="./img/intro/intro-bg.png" alt="Intro background")